<%- include('partials/header') %>
    <nav class="navbar navbar-expand-xxl navbar-dark underline">
        <div class="container-fluid">
            <a class="navbar-brand navbarWhite" href="/">SireSmalls</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/upload">Upload Song</a>
                    </li>
                    <li class="nav-item">
                        <a href="/songManagement/logout" class="nav-link form-inline">
                            <button type="button" class="btn btn-primary btn-block btn-sm">Log out</button>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container containerSize3">
        <form action="/songManagement/<%= id %>" method="post" enctype="multipart/form-data">
            <div class="row margin">
                <div class="col-7">
                    <input style="background-color: black; color: white;" class="form-control" type="text" name="producer" placeholder="Producer" value="<%= producer %>">
                </div>
                <div class="col-5">
                    <input style="background-color: black; color: white;" class="form-control" type="text" name="beat" placeholder="Beat" value="<%= beat %>">
                </div>
            </div>
            <div class="row margin">
                <div class="col-8">
                    <input style="background-color: black; color: white;" class="form-control" type="text" name="album" placeholder="Album" value="<%= album %>">
                </div>
                <div class="col-4">
                    <input style="background-color: black; color: white;" class="form-control" type="text" name="bpm" placeholder="BPM" value="<%= bpm %>">
                </div>
            </div>
            <div class="row margin">
                <div class="col">
                    <label class="form-label" for="beatfile">Select a beat:</label>
                    <input style="background-color: black; color: white;" class="form-control" type="file" id="beatfile" name="beatfile" accept="audio/*">
                </div>
            </div>
            <div class="row margin">
                <div class="col">
                    <label class="form-label" for="imagefile">Select an image:</label>
                    <input style="background-color: black; color: white;" class="form-control" type="file" id="imagefile" name="imagefile" accept="image/*">
                </div>
            </div>
            <div class="row margin">
                <div class="col">
                    <input style="background-color: black; color: white;" class="form-control" type="text" name="recordlabel" placeholder="Record Label" value="<%= recordlabel %>">
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col">
                    <button class="col-12 btn btn-primary btn-block" type="submit">Update</button>
                </div>
            </div>
        </form>
    </div>

    <hr style="color: white; margin-top: 50px;">

    <div class="container" style="margin-top: 50px;">
        <% beats.forEach(beat => { %>
            <div class="row">
                <div class="col-10 margin">
                    <form action="/songManagement/update/<%= beat.id %>" method="post">
                        <button type="submit" class="btn btn-primary btn-block btn-sm" style="width: 100%; text-align: left;"><%= beat.beat %></button>
                    </form>
                </div>
                <div class="col-2">
                    <form action="/songManagement/delete/<%= beat.id %>" method="post">
                        <button class="btn btn-primary btn-block btn-sm" type="submit">Delete</button>
                    </form> 
                </div>
            </div>
        <% }) %> 
    </div>
<%- include('partials/footer') %>