<%- include('partials/header') %>
    <nav class="navbar navbar-expand-xxl navbar-dark underline">
        <div class="container-fluid">
            <a class="navbar-brand navbarWhite" href="/">SireSmalls</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/upload">Upload Song</a>
                    </li>
                    <li class="nav-item">
                        <a href="/songManagement/logout" class="nav-link form-inline">
                            <button type="button" class="btn btn-primary btn-block btn-sm">Log out</button>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 60px;">
        <% beats.forEach(beat => { %>
            <div class="row">
                <div class="col-10">
                    <h3 style="background-color: aqua;"><%= beat.beat %></h3>
                </div>
                <div class="col-2">
                    <form action="/songManagement/delete/<%= beat.id %>" method="post">
                        <button class="btn btn-primary btn-block btn-sm" type="submit">Delete</button>
                    </form> 
                </div>
            </div>
        <% }) %> 
    </div>
<%- include('partials/footer') %>